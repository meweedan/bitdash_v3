{
  "kind": "collectionType",
  "collectionName": "careers",
  "info": {
    "singularName": "career",
    "pluralName": "careers",
    "displayName": "Job Openings",
    "description": "Job openings and career opportunities at BitDash"
  },
  "options": {
    "draftAndPublish": true,
    "comment": "Job postings for the careers page"
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "shortDescription": {
      "type": "text",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "description": {
      "type": "richtext",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "requirements": {
      "type": "richtext",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "benefits": {
      "type": "richtext",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "department": {
      "type": "enumeration",
      "enum": [
        "all",
        "engineering",
        "business",
        "customer-service",
        "operations"
      ],
      "required": true,
      "default": "all",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "location": {
      "type": "enumeration",
      "enum": [
        "all",
        "london",
        "new-york",
        "cairo",
        "istanbul",
        "remote"
      ],
      "required": true,
      "default": "all",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "isRemote": {
      "type": "boolean",
      "default": false,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "salary": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "experienceLevel": {
      "type": "enumeration",
      "enum": [
        "entry",
        "mid",
        "senior",
        "lead",
        "executive"
      ],
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "applicationEmail": {
      "type": "email",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "applicationUrl": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "featuredJob": {
      "type": "boolean",
      "default": false,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "applyBy": {
      "type": "date",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    }
  }
}