{
  "kind": "collectionType",
  "collectionName": "bank_accounts",
  "info": {
    "singularName": "bank-account",
    "pluralName": "bank-accounts",
    "displayName": "Bank Account",
    "description": "Linked bank accounts"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "bankName": {
      "type": "string",
      "required": true,
      "maxLength": 100,
      "minLength": 2
    },
    "accountNumber": {
      "type": "string",
      "required": true,
      "private": true,
      "unique": true,
      "maxLength": 34,  
      "minLength": 8
    },
    "accountHolderName": {
      "type": "string",
      "required": true,
      "maxLength": 100,
      "minLength": 2
    },
    "isVerified": {
      "type": "boolean",
      "default": false
    },
    "isDefault": {
      "type": "boolean",
      "default": false
    },
    "wallet": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::wallet.wallet",
      "inversedBy": "bankAccounts"
    },
    "lastUsed": {
      "type": "datetime"
    },
    "bankBranch": {
      "type": "string",
      "required": false,
      "maxLength": 100
    },
    "swiftCode": {
      "type": "string",
      "required": false,
      "maxLength": 11
    }
  }
}