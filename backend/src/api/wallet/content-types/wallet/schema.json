{
  "kind": "collectionType",
  "collectionName": "wallets",
  "info": {
    "singularName": "wallet",
    "pluralName": "wallets",
    "displayName": "Wallet",
    "description": "Unified wallet system for all BitDash platforms"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "balance": {
      "type": "decimal",
      "required": true,
      "default": 0,
      "min": 0
    },
    "currency": {
      "type": "string",
      "required": true,
      "default": "LYD"
    },
    "isActive": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "walletId": {
      "type": "uid",
      "required": true
    },
    "wallet_type": {
      "type": "enumeration",
      "enum": ["customer", "agent", "merchant", "operator", "trader", "investor", "corporate", "platform"],
      "default": "customer",
      "required": true
    },
    "customer": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::customer-profile.customer-profile"
    },
    "agent": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::agent.agent"
    },
    "merchant": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::merchant.merchant"
    },
    "operator": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::operator.operator"
    },
    "retail_trader": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::retail-trader.retail-trader",
      "inversedBy": "wallet"
    },
    "investor": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::investor.investor"
    },
    "institutional_client": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::institutional-client.institutional-client",
      "inversedBy": "wallets"
    },
    "introducing_broker": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::introducing-broker.introducing-broker",
      "inversedBy": "wallet"
    },
    "sent_transactions": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::transaction.transaction",
      "mappedBy": "sender"
    },
    "received_transactions": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::transaction.transaction",
      "mappedBy": "receiver"
    },
    "crypto_transactions": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::crypto.crypto",
      "mappedBy": "wallet"
    },
    "dailyLimit": {
      "type": "decimal",
      "default": 5000
    },
    "monthlyLimit": {
      "type": "decimal",
      "default": 50000
    },
    "lastActivity": {
      "type": "datetime"
    }
  }
}