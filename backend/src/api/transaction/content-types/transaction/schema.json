{
  "kind": "collectionType",
  "collectionName": "transactions",
  "info": {
    "singularName": "transaction",
    "pluralName": "transactions",
    "displayName": "Transaction",
    "description": "Financial transaction records across all BitDash platforms"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "amount": {
      "type": "decimal",
      "required": true
    },
    "currency": {
      "type": "enumeration",
      "enum": ["LYD", "USDT", "USD", "BTC", "ETH", "EUR", "GBP", "AUD", "CAD", "CHF", "JPY", "CNY"],
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "transfer",
        "deposit",
        "withdrawal",
        "conversion",
        "payment",
        "shop_sale",
        "shop_payout",
        "trade",
        "commission",
        "profit_split",
        "investment"
      ]
    },
    "sender": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::wallet.wallet"
    },
    "receiver": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::wallet.wallet"
    },
    "status": {
      "type": "enumeration",
      "enum": ["pending", "completed", "failed", "reversed"],
      "default": "pending"
    },
    "blockchain_tx_hash": {
      "type": "string"
    },
    "fee": {
      "type": "decimal",
      "required": true,
      "default": 0
    },
    "exchangeRate": {
      "type": "decimal"
    },
    "reference": {
      "type": "string",
      "unique": true
    },
    "metadata": {
      "type": "json"
    },
    "contacts": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::contact.contact"
    },
    "merchant": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::merchant.merchant"
    },
    "payment_link": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::payment-link.payment-link"
    },
    "agent": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::agent.agent"
    },
    "retail_trader": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::retail-trader.retail-trader",
      "inversedBy": "trading_history"
    },
    "investor": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::investor.investor",
      "inversedBy": "investmentHistory"
    },
    "institutional_client": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::institutional-client.institutional-client",
      "inversedBy": "transactionHistory"
    },
    "introducing_broker": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::introducing-broker.introducing-broker",
      "inversedBy": "commissionHistory"
    },
    "trade_details": {
      "type": "json",
      "comment": "For trade transactions with details like symbol, entry/exit prices, etc."
    }
  }
}