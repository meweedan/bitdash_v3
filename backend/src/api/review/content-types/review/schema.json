{
  "kind": "collectionType",
  "collectionName": "reviews",
  "info": {
    "singularName": "review",
    "pluralName": "reviews",
    "displayName": "Review",
    "description": "Reviews for restaurants, menu items, shop items, and services"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "rating": {
      "type": "decimal",
      "required": true,
      "min": 0,
      "max": 5
    },
    "comment": {
      "type": "text"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["images"]
    },
    "customer_profile": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::customer-profile.customer-profile"
    },
    "restaurant": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::restaurant.restaurant"
    },
    "menu_item": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::menu-item.menu-item"
    },
    "shop_item": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::shop-item.shop-item"
    },
    "order": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::order.order"
    },
    "status": {
      "type": "enumeration",
      "enum": ["pending", "approved", "rejected"],
      "default": "pending"
    },
    "reported": {
      "type": "boolean",
      "default": false
    },
    "reply": {
      "type": "text"
    },
    "reply_at": {
      "type": "datetime"
    },
    "metadata": {
      "type": "json"
    }
  }
}