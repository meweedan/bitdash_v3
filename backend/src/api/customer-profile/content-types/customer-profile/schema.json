{
  "kind": "collectionType",
  "collectionName": "customer_profiles",
  "info": {
    "singularName": "customer-profile",
    "pluralName": "customer-profiles",
    "displayName": "Customer Profile",
    "description": "Customer profile with wallet and food preferences"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "fullName": {
      "type": "string",
      "required": true
    },
    "phone": {
      "type": "string",
      "required": true
    },
    "users_permissions_user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "customer_profile"
    },
    "orders": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order.order",
      "mappedBy": "customer_profile"
    },
    "wallet": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::wallet.wallet",
      "mappedBy": "customer"
    },
    "wallet_status": {
      "type": "enumeration",
      "enum": [
        "active",
        "inactive",
        "locked",
        "pending_verification"
      ],
      "default": "pending_verification"
    },
    "wallet_pin": {
      "type": "integer",
      "private": true,
      "required": true,
      "min": 100000,
      "max": 999999
    },
    "contacts": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::contact.contact",
      "mappedBy": "customer_profile"
    },
    "avatar": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"],
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    }
  }
}