{
  "kind": "collectionType",
  "collectionName": "challenges",
  "info": {
    "singularName": "challenge",
    "pluralName": "challenges",
    "displayName": "Challenge",
    "description": "Challenges for traders, with Stripe payment data"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "slug": {
      "type": "uid",
      "required": true,
      "unique": true
    },
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "account_size": {
      "type": "integer",
      "required": true
    },
    "profit_target": {
      "type": "decimal",
      "required": true
    },
    "max_drawdown": {
      "type": "decimal",
      "required": true
    },
    "daily_drawdown": {
      "type": "decimal",
      "required": true
    },
    "duration_days": {
      "type": "integer",
      "required": true
    },
    "features": {
      "type": "json",
      "default": []
    },
    "specs": {
      "type": "json",
      "default": []
    },
    "badge": {
      "type": "string"
    },
    "color": {
      "type": "string"
    },
    "popular": {
      "type": "boolean",
      "default": false
    },
    "start_date": {
      "type": "datetime",
      "required": false
    },
    "end_date": {
      "type": "datetime",
      "required": false
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "active",
        "cancelled",
        "expired"
      ],
      "required": true,
      "default": "active"
    },
    "stripeSubscriptionId": {
      "type": "string",
      "unique": true,
      "private": false
    },
    "stripeCustomerId": {
      "type": "string",
      "private": false
    },
    "stripePriceId": {
      "type": "string",
      "private": false
    },
    "prop-trader": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::prop-trader.prop-trader",
      "inversedBy": "challenge"
    }
  }
}
