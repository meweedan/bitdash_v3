{
  "kind": "collectionType",
  "collectionName": "shop_owners",
  "info": {
    "singularName": "shop-owner",
    "pluralName": "shop-owners",
    "displayName": "Shop Owner"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "shop_owner"
    },
     "shopName": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "orders": {
        "type": "relation",
        "relation": "oneToMany",
        "target": "api::order.order",
        "mappedBy": "shop_owner" 
    },
    "description": {
      "type": "richtext"
    },
    "logo": {
      "type": "media",
      "multiple": false
    },
    "coverImage": {
      "type": "media",
      "multiple": false
    },
    "wallet": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::wallet.wallet"
    },
    "shop_items": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::shop-item.shop-item",
      "mappedBy": "shop_owner"
    },
    "verificationStatus": {
      "type": "enumeration",
      "enum": ["pending", "verified", "rejected"],
      "default": "pending"
    },
    "businessDocuments": {
      "type": "media",
      "multiple": true
    },
    "categories": {
      "type": "json"
    },
    "rating": {
      "type": "decimal",
      "max": 5,
      "min": 0,
      "default": 0
    }
  }
}