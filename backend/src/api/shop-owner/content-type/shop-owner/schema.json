{
  "kind": "collectionType",
  "collectionName": "shop_owners",
  "info": {
    "singularName": "shop-owner",
    "pluralName": "shop-owners",
    "displayName": "Shop Owner",
    "description": "Shop owners for BitShop marketplace"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "shopName": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "richtext"
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "wallet": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::wallet.wallet"
    },
    "orders": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order.order",
      "mappedBy": "shop_owner"
    },
    "items": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::shop-item.shop-item",
      "mappedBy": "owner"
    },
    "verificationStatus": {
      "type": "enumeration",
      "enum": ["pending", "verified", "rejected"],
      "default": "pending"
    },
    "businessLicense": {
      "type": "string",
      "required": true
    },
    "taxId": {
      "type": "string",
      "required": true
    },
    "registrationNumber": {
      "type": "string",
      "required": true
    },
    "businessType": {
      "type": "enumeration",
      "enum": [
        "retail",
        "wholesale",
        "manufacturer",
        "artisan"
      ],
      "default": "retail"
    },
    "businessDocuments": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["files", "images"]
    },
    "location": {
      "type": "component",
      "component": "common.address",
      "required": true
    },
    "operatingHours": {
      "type": "component",
      "component": "common.operating-hours",
      "required": true
    },
    "categories": {
      "type": "json"
    },
    "rating": {
      "type": "decimal",
      "max": 5,
      "min": 0,
      "default": 0
    },
    "phone": {
      "type": "string",
      "required": true
    },
    "fullName": {
      "type": "string",
      "required": true
    }
  }
}