{
  "kind": "collectionType",
  "collectionName": "shop_items",
  "info": {
    "singularName": "shop-item",
    "pluralName": "shop-items",
    "displayName": "Shop Item"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "images": {
      "type": "media",
      "multiple": true
    },
    "owner": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::shop-owner.shop-owner"
    },
    "category": {
      "type": "string",
      "required": true
    },
    "subcategory": {
      "type": "string"
    },
    "stock": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "status": {
      "type": "enumeration",
      "enum": ["available", "out_of_stock", "hidden"],
      "default": "available"
    },
    "specifications": {
      "type": "json"
    },
    "variants": {
      "type": "component",
      "component": "shop.item-variant",
      "repeatable": true
    },
    "rating": {
      "type": "decimal",
      "max": 5,
      "min": 0,
      "default": 0
    },
    "reviews": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::review.review",
      "mappedBy": "item"
    }
  }
}