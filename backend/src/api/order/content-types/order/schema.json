{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "preparing",
        "ready",
        "completed",
        "cancelled"
      ],
      "default": "pending",
      "required": true
    },
    "total": {
      "type": "decimal",
      "required": true
    },
    "tables": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::table.table",
      "mappedBy": "orders"
    },
    "customer_profile": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::customer-profile.customer-profile",
      "inversedBy": "orders"
    },
    "operators": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::operator.operator",
      "inversedBy": "orders"
    },
    "payment_method": {
      "type": "enumeration",
      "enum": [
        "Credit",
        "Cash",
        "Card"
      ],
      "required": true
    },
    "guest_info": {
      "type": "json"
    },
    "notes": {
      "type": "text"
    },
    "restaurant": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::restaurant.restaurant",
      "inversedBy": "orders"
    },
    "order_items": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order-item.order-item",
      "mappedBy": "order"
    },
    "cancellation_attempts": {
      "type": "integer",
      "default": 0
    },
    "captain": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::captain.captain",
      "inversedBy": "orders"
    },
    "messages": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::message.message",
      "mappedBy": "order"
    },
     "orderType": {
      "type": "enumeration",
      "enum": ["purchase", "test-drive", "inspection"]
    },
    "financingDetails": { "type": "json" },
    "insuranceDetails": { "type": "json" },
    "inspectionReport": { "type": "json" },
    "testDriveDate": { "type": "datetime" }
  }
}
