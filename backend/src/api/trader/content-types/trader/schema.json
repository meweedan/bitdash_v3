{
  "kind": "collectionType",
  "collectionName": "traders",
  "info": {
    "singularName": "trader",
    "pluralName": "traders",
    "displayName": "Stock Trader"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "companyName": {
      "type": "string",
      "required": true
    },
    "warehouseAddress": {
      "type": "string",
      "required": true
    },
    "commission_rate": {
      "type": "decimal",
      "default": 3.0
    },
    "status": {
      "type": "enumeration",
      "enum": ["active", "pending", "suspended"],
      "default": "pending"
    },
    "operator": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::operator.operator"
    },
    "stocks": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::stock.stock",
      "mappedBy": "trader"
    },
    "warehouseCapacity": {
      "type": "integer"
    },
    "inventoryTypes": {
      "type": "json"
    },
    "certifications": {
      "type": "json"
    },
    "tradingVolume": {
      "type": "decimal"
    },
    "rating": {
      "type": "decimal"
    }
  }
}