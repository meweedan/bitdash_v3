{
    "kind": "collectionType",
    "collectionName": "kyc_verifications",
    "info": {
      "singularName": "kyc-verification",
      "pluralName": "kyc-verifications",
      "displayName": "KYC Verification"
    },
    "attributes": {
      "customer": {
        "type": "relation",
        "relation": "oneToOne",
        "target": "api::customer-profile.customer-profile"
      },
      "status": {
        "type": "enumeration",
        "enum": ["pending", "approved", "rejected", "review_required"],
        "default": "pending"
      },
      "tier": {
        "type": "enumeration",
        "enum": ["basic", "intermediate", "advanced"],
        "default": "basic"
      },
      "risk_score": {
        "type": "integer",
        "min": 0,
        "max": 100
      },
      "verification_attempts": {
        "type": "integer",
        "default": 0
      },
      "last_verification": {
        "type": "datetime"
      },
      "expiry_date": {
        "type": "datetime"
      },
      "compliance_notes": {
        "type": "text"
      },
      "aml_check_result": {
        "type": "json"
      },
      "pep_check_result": {
        "type": "boolean",
        "default": false
      }
    }
  }