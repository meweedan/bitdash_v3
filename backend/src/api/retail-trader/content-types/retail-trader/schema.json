{
  "kind": "collectionType",
  "collectionName": "retail_traders",
  "info": {
    "singularName": "retail-trader",
    "pluralName": "retail-traders",
    "displayName": "Retail Trader",
    "description": "BitTrade platform retail traders"
  },
  "options": {
    "draftAndPublish": false,
    "timestamps": true
  },
  "attributes": {
    "users_permissions_user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "retail_trader"
    },
    "status": {
      "type": "enumeration",
      "enum": ["pending", "active", "suspended", "terminated"],
      "default": "pending"
    },
    "tradingLevel": {
      "type": "enumeration",
      "enum": ["beginner", "intermediate", "advanced", "professional"],
      "default": "beginner"
    },
    "accountType": {
      "type": "enumeration",
      "enum": ["demo", "standard", "premium", "vip"],
      "default": "standard"
    },
    "tradingVolume": {
      "type": "decimal",
      "default": 0
    },
    "totalTrades": {
      "type": "integer",
      "default": 0
    },
    "totalProfitLoss": {
      "type": "decimal",
      "default": 0
    },
    "winRate": {
      "type": "decimal",
      "default": 0
    },
    "tradingSince": {
      "type": "datetime"
    },
    "leverageLimit": {
      "type": "integer",
      "default": 100
    },
    "feeDiscountTier": {
      "type": "enumeration",
      "enum": ["tier1", "tier2", "tier3", "tier4", "tier5"],
      "default": "tier1"
    },
    "kycVerified": {
      "type": "boolean",
      "default": false
    },
    "wallet": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::wallet.wallet",
      "inversedBy": "retail_trader"
    },
    "trading_history": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::transaction.transaction",
      "mappedBy": "retail_trader"
    },
    "referredBy": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::introducing-broker.introducing-broker",
      "inversedBy": "referredRetailTraders"
    },
    "tradingPreferences": {
      "type": "json",
      "comment": "Preferences for instruments, markets, etc."
    },
    "tradingMetrics": {
      "type": "json",
      "comment": "Advanced metrics like Sharpe ratio, max drawdown, etc."
    },
    "apiKeys": {
      "type": "json",
      "comment": "API access credentials (encrypted)"
    },
    "subscribedSignals": {
      "type": "json",
      "comment": "Trading signals this user subscribes to"
    },
    "marginLevel": {
      "type": "decimal",
      "default": 100
    },
    "marginCallLevel": {
      "type": "decimal",
      "default": 80
    },
    "stopOutLevel": {
      "type": "decimal",
      "default": 50
    },
    "tradingPlatformSettings": {
      "type": "json",
      "comment": "Custom settings for trading platform"
    },
    "agreedToTerms": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "notificationPreferences": {
      "type": "json"
    },
    "loyaltyPoints": {
      "type": "integer",
      "default": 0
    },
    "preferredPaymentMethod": {
      "type": "json"
    },
    "monthlyTradingGoal": {
      "type": "decimal"
    },
    "notes": {
      "type": "text"
    }
  }
}