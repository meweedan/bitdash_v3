{
  "kind": "collectionType",
  "collectionName": "cryptos",
  "info": {
    "singularName": "crypto",
    "pluralName": "cryptos",
    "displayName": "Crypto"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "txHash": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "network": {
      "type": "enumeration",
      "enum": ["TRC20", "ERC20"],
      "required": true
    },
    "amount": {
      "type": "decimal",
      "required": true
    },
    "fromAddress": {
      "type": "string",
      "required": true
    },
    "toAddress": {
      "type": "string",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": ["pending", "confirmed", "failed"],
      "default": "pending"
    },
    "confirmations": {
      "type": "integer",
      "default": 0
    },
    "wallet": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::wallet.wallet"
    }
  }
}