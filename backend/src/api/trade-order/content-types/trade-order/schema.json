{
    "kind": "collectionType",
    "collectionName": "trade_orders",
    "info": {
      "singularName": "trade-order",
      "pluralName": "trade-orders",
      "displayName": "Trade Order",
      "description": "MT5 trading orders"
    },
    "attributes": {
      "ticket": {
        "type": "biginteger",
        "required": true,
        "unique": true
      },
      "symbol": {
        "type": "string",
        "required": true
      },
      "type": {
        "type": "enumeration",
        "enum": ["buy", "sell", "buy_limit", "sell_limit", "buy_stop", "sell_stop"],
        "required": true
      },
      "lots": {
        "type": "decimal",
        "required": true
      },
      "open_price": {
        "type": "decimal",
        "required": true
      },
      "close_price": {
        "type": "decimal"
      },
      "take_profit": {
        "type": "decimal"
      },
      "stop_loss": {
        "type": "decimal"
      },
      "profit": {
        "type": "decimal"
      },
      "swap": {
        "type": "decimal",
        "default": 0
      },
      "commission": {
        "type": "decimal",
        "default": 0
      },
      "status": {
        "type": "enumeration",
        "enum": ["open", "closed", "cancelled", "expired"],
        "default": "open"
      },
      "trading_account": {
        "type": "relation",
        "relation": "manyToOne",
        "target": "api::trading-account.trading-account"
      },
      "open_time": {
        "type": "datetime",
        "required": true
      },
      "close_time": {
        "type": "datetime"
      }
    }
  }