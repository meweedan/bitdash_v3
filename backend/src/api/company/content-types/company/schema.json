{
  "kind": "collectionType",
  "collectionName": "companies",
  "info": {
    "singularName": "company",
    "pluralName": "companies",
    "displayName": "Company",
    "description": "Company profiles for employers"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": ["corporate", "sme", "startup"],
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "logo": {
      "type": "media",
      "multiple": false
    },
    "documents": {
      "type": "media",
      "multiple": true
    },
    "address": {
      "type": "string"
    },
    "city": {
      "type": "string"
    },
    "coordinates": {
      "type": "component",
      "component": "common.coordinates",
      "required": false
    },
    "industry": {
      "type": "json"
    },
    "size": {
      "type": "string"
    },
    "verified": {
      "type": "boolean",
      "default": false
    },
    "jobs": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::job.job",
      "mappedBy": "company"
    }
  }
}