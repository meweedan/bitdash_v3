{
  "kind": "collectionType",
  "collectionName": "employers",
  "info": {
    "singularName": "employer",
    "pluralName": "employers",
    "displayName": "Employer",
    "description": "Employer profiles for job marketplace"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "company": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::company.company"
    },
    "wallet": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::wallet.wallet"
    },
    "subscription": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::subscription.subscription"
    },
    "verificationStatus": {
      "type": "enumeration",
      "enum": ["pending", "verified", "rejected"],
      "default": "pending"
    },
    "documents": {
      "type": "media",
      "multiple": true
    },
    "verifiedAt": {
      "type": "datetime"
    }
  }
}