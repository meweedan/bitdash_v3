{
  "kind": "collectionType",
  "collectionName": "employers",
  "info": {
    "singularName": "employer",
    "pluralName": "employers",
    "displayName": "Employer",
    "description": "Employer profiles for job marketplace"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "employer"
    },
    "company": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::company.company"
    },
    "wallet": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::wallet.wallet"
    },
    "subscription": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::subscription.subscription"
    },
    "fullName": {
      "type": "string",
      "required": true
    },
    "phone": {
      "type": "string",
      "required": true
    },
    "position": {
      "type": "string"
    },
    "registrationNumber": {
      "type": "string",
      "required": true
    },
    "taxId": {
      "type": "string",
      "required": true
    },
    "verificationStatus": {
      "type": "enumeration",
      "enum": ["pending", "verified", "rejected"],
      "default": "pending"
    },
    "verifiedAt": {
      "type": "datetime"
    },
    "documents": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["files", "images"]
    }
  }
}