{
    "kind": "collectionType",
    "collectionName": "trading_accounts",
    "info": {
      "singularName": "trading-account",
      "pluralName": "trading-accounts",
      "displayName": "Trading Account",
      "description": "MT5 trading account information"
    },
    "options": {
      "draftAndPublish": false
    },
    "attributes": {
      "mt5_login": {
        "type": "biginteger",
        "required": true,
        "unique": true
      },
      "mt5_password": {
        "type": "string",
        "private": true,
        "required": true
      },
      "account_type": {
        "type": "enumeration",
        "enum": ["demo", "standard", "premium", "vip"],
        "default": "standard"
      },
      "leverage": {
        "type": "integer",
        "default": 100
      },
      "balance": {
        "type": "decimal",
        "required": true,
        "default": 0
      },
      "equity": {
        "type": "decimal",
        "required": true,
        "default": 0
      },
      "margin": {
        "type": "decimal",
        "default": 0
      },
      "free_margin": {
        "type": "decimal",
        "default": 0
      },
      "wallet": {
        "type": "relation",
        "relation": "manyToOne",
        "target": "api::wallet.wallet"
      },
      "customer": {
        "type": "relation",
        "relation": "manyToOne",
        "target": "api::customer-profile.customer-profile"
      },
      "status": {
        "type": "enumeration",
        "enum": ["active", "suspended", "closed"],
        "default": "active"
      }
    }
  }