{
  "kind": "collectionType",
  "collectionName": "tables",
  "info": {
    "singularName": "table",
    "pluralName": "tables",
    "displayName": "Table",
    "description": "Defines a table within a restaurant"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "description": "The identifier or name of the table, e.g., Table 1, VIP Table"
    },
    "description": {
      "type": "text",
      "required": false,
      "description": "Additional details or characteristics of the table"
    },
    "restaurant": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::restaurant.restaurant",
      "inversedBy": "tables"
    },
    "qr_code": {
      "type": "string",
      "required": false,
      "unique": true,
      "description": "QR code identifier associated with this table"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "Available",
        "Occupied",
        "Reserved"
      ],
      "default": "Available",
      "description": "Current status of the table"
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "tables"
    },
    "orders": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::order.order",
      "inversedBy": "tables"
    },
    "qr_code_for_payment": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    }
  }
}
