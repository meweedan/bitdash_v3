{
  "kind": "collectionType",
  "collectionName": "payments",
  "info": {
    "singularName": "payment",
    "pluralName": "payments",
    "displayName": "Payment",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "amount": {
      "type": "decimal",
      "required": true
    },
    "currency": {
      "type": "string",
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "voucher",
        "subscription"
      ],
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "completed",
        "failed"
      ],
      "required": false,
      "default": "pending"
    },
    "customer_profile": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::customer-profile.customer-profile",
      "inversedBy": "payments"
    },
    "operator": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::operator.operator",
      "inversedBy": "payments"
    },
    "transaction_id": {
      "type": "uid"
    },
    "payment_method": {
      "type": "enumeration",
      "enum": [
        "bitwallet",
        "cash",
        "card"
      ]
    },
    "timestamp": {
      "type": "datetime"
    },
    "description": {
      "type": "string"
    },
    "metadata": {
      "type": "json"
    }
  }
}
