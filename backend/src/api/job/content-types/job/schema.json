{
  "kind": "collectionType",
  "collectionName": "jobs",
  "info": {
    "singularName": "job",
    "pluralName": "jobs",
    "displayName": "Job",
    "description": "Job listings"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "company": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::company.company"
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "requirements": {
      "type": "json"
    },
    "responsibilities": {
      "type": "json"
    },
    "type": {
      "type": "enumeration",
      "enum": ["full-time", "part-time", "contract"],
      "required": true
    },
    "experience": {
    "type": "component",
    "component": "job.experience"
    },
    "salary": {
    "type": "component",
    "component": "job.salary"
    },
    "location": {
    "type": "component",
    "component": "job.location"
    },
    "benefits": {
      "type": "json"
    },
    "skills": {
      "type": "json"
    },
    "applications": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::job-application.job-application",
      "mappedBy": "job"
    },
    "status": {
      "type": "enumeration",
      "enum": ["draft", "active", "paused", "closed"],
      "default": "draft"
    },
    "visibility": {
      "type": "enumeration",
      "enum": ["public", "private"],
      "default": "public"
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "views": {
      "type": "integer",
      "default": 0
    }
  }
}