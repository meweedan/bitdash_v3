{
  "kind": "collectionType",
  "collectionName": "investors",
  "info": {
    "singularName": "investor",
    "pluralName": "investors",
    "displayName": "Investor",
    "description": "BitStock platform investors"
  },
  "options": {
    "draftAndPublish": false,
    "timestamps": true
  },
  "pluginOptions": {},
  "attributes": {
    "users_permissions_user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "investor"
    },
    "status": {
      "type": "enumeration",
      "enum": ["pending", "active", "suspended", "terminated"],
      "default": "pending"
    },
    "investorType": {
      "type": "enumeration",
      "enum": ["individual", "corporate", "fund"],
      "default": "individual"
    },
    "totalInvestment": {
      "type": "decimal",
      "default": 0
    },
    "availableCapital": {
      "type": "decimal",
      "default": 0
    },
    "allocatedCapital": {
      "type": "decimal",
      "default": 0
    },
    "riskPreference": {
      "type": "enumeration",
      "enum": ["conservative", "moderate", "aggressive"],
      "default": "moderate"
    },
    "returnExpectation": {
      "type": "decimal"
    },
    "minimumInvestmentPeriod": {
      "type": "integer",
      "min": 1,
      "default": 3
    },
    "kycVerified": {
      "type": "boolean",
      "default": false
    },
    "accreditedInvestor": {
      "type": "boolean",
      "default": false
    },
    "profitShareRatio": {
      "type": "decimal",
      "default": 20
    },
    "investmentHistory": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::transaction.transaction",
      "mappedBy": "investor"
    },
    "companyName": {
      "type": "string"
    },
    "companyRegistrationNumber": {
      "type": "string"
    },
    "taxID": {
      "type": "string"
    },
    "wallets": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::wallet.wallet",
      "mappedBy": "investor"
    },
    "preferredPaymentMethod": {
      "type": "json"
    },
    "agreementDocuments": {
      "type": "json"
    },
    "agreedToTerms": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "investmentPerformance": {
      "type": "json"
    }
  }
}