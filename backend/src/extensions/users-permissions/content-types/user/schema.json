{
  "kind": "collectionType",
  "collectionName": "up_users",
  "info": {
    "name": "user",
    "description": "BitDash unified user schema with role-based profiles",
    "singularName": "user",
    "pluralName": "users",
    "displayName": "User"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "username": {
      "type": "string",
      "minLength": 3,
      "unique": true,
      "configurable": false,
      "required": true
    },
    "email": {
      "type": "email",
      "minLength": 6,
      "configurable": false,
      "required": true
    },
    "provider": {
      "type": "string",
      "configurable": false
    },
    "password": {
      "type": "password",
      "minLength": 6,
      "configurable": false,
      "private": true,
      "searchable": false
    },
    "resetPasswordToken": {
      "type": "string",
      "configurable": false,
      "private": true,
      "searchable": false
    },
    "confirmationToken": {
      "type": "string",
      "configurable": false,
      "private": true,
      "searchable": false
    },
    "confirmed": {
      "type": "boolean",
      "default": false,
      "configurable": false
    },
    "blocked": {
      "type": "boolean",
      "default": false,
      "configurable": false
    },
    "role": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.role",
      "inversedBy": "users",
      "configurable": false
    },
    "customer_profile": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::customer-profile.customer-profile",
      "mappedBy": "users_permissions_user"
    },
    "operator": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::operator.operator",
      "mappedBy": "users_permissions_user"
    },
    "agent": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::agent.agent",
      "mappedBy": "users_permissions_user"
    },
    "merchant": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::merchant.merchant",
      "mappedBy": "users_permissions_user"
    },
    "retail_trader": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::retail-trader.retail-trader",
      "mappedBy": "users_permissions_user"
    },
    "investor": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::investor.investor",
      "mappedBy": "users_permissions_user"
    },
    "institutional_client": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::institutional-client.institutional-client",
      "mappedBy": "users_permissions_user"
    },
    "introducing_broker": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::introducing-broker.introducing-broker",
      "mappedBy": "users_permissions_user"
    },
    "primaryPlatform": {
      "type": "enumeration",
      "enum": ["crypto", "stock", "ldn", "cash", "multiple"],
      "default": "bitcash"
    },
    "registrationDate": {
      "type": "datetime"
    },
    "lastLoginDate": {
      "type": "datetime"
    },
    "ipAddress": {
      "type": "string"
    },
    "userAgent": {
      "type": "string"
    },
    "referralCode": {
      "type": "string"
    },
    "referredBy": {
      "type": "string"
    },
    "preferredLanguage": {
      "type": "string",
      "default": "en"
    },
    "profileCompleted": {
      "type": "boolean",
      "default": false
    },
    "twoFactorEnabled": {
      "type": "boolean",
      "default": false
    },
    "twoFactorMethod": {
      "type": "enumeration",
      "enum": ["none", "sms", "email", "app"],
      "default": "none"
    },
    "twoFactorSecret": {
      "type": "string",
      "private": true
    },
    "notifications": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::notification.notification",
      "mappedBy": "user"
    },
    "deviceTokens": {
      "type": "json",
      "comment": "Mobile device tokens for push notifications"
    }
  }
}